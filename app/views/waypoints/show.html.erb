<%= render 'shared/trips_header', trip: @trip, title: "Waypoint: #{@waypoint.name}", navbar: false %>

<%= render 'shared/back_button', target: trip_waypoints_path(@trip) %>
<% if can? :manage, @waypoint %>
    <%= render 'shared/edit_button', target: edit_trip_waypoint_path(@trip, @waypoint) %>
    <%= render 'shared/delete_button', target: trip_waypoint_path(@trip, @waypoint),
          message: 'Are you sure? Associated segments, posts and media items will also be deleted!'
    %>
<% end %>

<p class="fs-3 fw-light"><strong>Notes: </strong><%= @waypoint.notes %></p>
<p class="fs-3 fw-light"><strong>Address: </strong><%= @waypoint.address %></p>
<p class="fs-3 fw-light"><strong>Country: </strong><%= @waypoint.country_name %></p>
<p class="fs-3 fw-light"><strong>Continent: </strong><%= @waypoint.continent %></p>
<p class="fs-3 fw-light"><strong>Longitude: </strong><%= @waypoint.longitude %></p>
<p class="fs-3 fw-light"><strong>Latitude: </strong><%= @waypoint.latitude %></p>

<h2 class="display-6 mt-5 mb-4">Map</h2>
<%= render 'shared/map', waypoints: [@waypoint] %>
