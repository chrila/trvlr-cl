<%= form_with(model: [@trip, waypoint], local: true, id: 'waypoint-form') do |f| %>
  <% if waypoint.errors.any? %>
    <div class="form-error-list">
      <h2><%= pluralize(waypoint.errors.count, "error") %> prohibited this waypoint from being saved:</h2>
      <ul>
      <% waypoint.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="waypoint">
    <div class="form-group my-2">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group my-2">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control' %>
    </div>

    <div class="form-group my-2">
      <%= f.label :address %>
      <span class="d-flex gap-2">
        <%= f.text_field :address, class: 'form-control', data: { "waypoint-target": "address" } %>
        <button type="button" class="btn btn-outline-dark location-search-button" data-action="click->waypoint#search" data-waypoint-target="button">Search</button>
      </span>
      <div data-waypoint-target="error"></div>
    </div>

    <div class="form-group my-2">
      <%= f.label :country %>
      <%= f.country_select :country, { selected: waypoint.country }, { class: 'form-select', data: { "waypoint-target": "country" } } %>
    </div>

    <div class="form-group my-2">
      <%= f.label :continent %>
      <%= f.select :continent, continents_for_select, {}, class: 'form-select', data: { "waypoint-target": "continent" } %>
    </div>

    <div class="form-group my-2">
      <%= f.label :latitude %>
      <%= f.text_field :latitude, class: 'form-control', data: { "waypoint-target": "latitude" } %>
    </div>

    <div class="form-group my-2">
      <%= f.label :longitude %>
      <%= f.text_field :longitude, class: 'form-control', data: { "waypoint-target": "longitude" } %>
    </div>
  </div>
<% end %>
