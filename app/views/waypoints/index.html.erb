<%= render 'shared/trips_header', trip: @trip, title: 'Waypoints', active: 'waypoints' %>

<% if can? :manage, @trip %>
  <%= render 'shared/add_button', target: new_trip_waypoint_path(@trip), resource: 'waypoint' %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col" class="d-none d-md-table-cell">Notes</th>
      <th scope="col" class="d-none d-lg-table-cell">Address</th>
      <th scope="col" class="d-none d-lg-table-cell">Country</th>
      <% if can? :read, @trip %>
        <th scope="col"></th> <!-- links to posts and media items -->
        <th scope="col"></th> <!-- links to show, edit, delete -->
      <% end %>
      <% if can? :manage, @trip %>
        <th scope="col"></th> <!-- move up (decrease sequence) -->
        <th scope="col"></th> <!-- move down (increase sequence) -->
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render @waypoints %>
  </tbody>
</table>

<% if @pagy.pages > 1%>
  <div class="my-5 text-center">
    <%== pagy_bootstrap_nav @pagy %>
  </div>
<% end %>
