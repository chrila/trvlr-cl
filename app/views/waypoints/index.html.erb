<%= link_to :back, class: 'btn btn-large btn-outline-dark mb-4' do %>
  <i class="bi bi-arrow-left"></i>
<% end %>

<h1 class="display-2"><%= "#{@trip.title} - Waypoints" %></h1>

<div class="my-3">
  <%= link_to 'New waypoint', new_trip_waypoint_path(@trip), class: 'btn btn-large btn-dark' %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Notes</th>
      <th scope="col">Address</th>
      <th scope="col">Country</th>
      <th scope="col">Continent</th>
      <th scope="col">Longitude</th>
      <th scope="col">Latitude</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @waypoints %>
  </tbody>
</table>
