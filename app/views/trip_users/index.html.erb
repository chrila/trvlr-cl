<%= render 'shared/trips_header', trip: @trip, title: 'Participants', active: 'participants' %>

<% if can? :manage, @trip %>
  <%= render 'shared/add_button', target: new_trip_trip_user_path(@trip), resource: 'participant' %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">User</th>
      <th scope="col">Role</th>
      <th scope="col" class="d-none d-lg-table-cell">e-Mail</th>
      <% if can? :manage, @trip %>
        <th scope="col"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render @trip_users %>
  </tbody>
</table>
