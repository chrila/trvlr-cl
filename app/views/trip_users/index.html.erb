<h1 class="display-2"><%= "#{@trip.title} - Participants" %></h1>

<%= render 'shared/navbar_trips' %>

<% if can? :manage, @trip %>
  <%= render 'shared/add_button', target: new_trip_trip_user_path(@trip), resource: 'participant' %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Role</th>
      <th scope="col" class="d-none d-lg-block">e-Mail</th>
      <% if can? :manage, @trip %>
        <th scope="col"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render @trip_users %>
  </tbody>
</table>
