<%= render 'shared/navbar_trips' %>

<h1 class="display-2"><%= "#{@trip.title} - Participants" %></h1>

<% if can? :manage, @trip %>
  <div class="my-3">
    <%= link_to 'Add participant', new_trip_trip_user_path, class: 'btn btn-dark btn-large' %>
  </div>  
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Role</th>
      <th scope="col" class="d-none d-lg-block">e-Mail</th>
      <% if can? :manage, @trip %>
        <th scope="col"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render @trip_users %>
  </tbody>
</table>
