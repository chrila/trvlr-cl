<tr>
  <th scope="row"><%= trip_user_counter + 1 %></th>
  <td><%= trip_user.user.username %></td>
  <td><%= trip_user.user.email %></td>
  <td><%= trip_user.role_string %></td>
    <% if can? :manage, trip_user %>
      <td>
        <%= link_to 'Edit', edit_trip_trip_user_path(@trip, trip_user) %>
        <%= link_to 'Delete', trip_trip_user_path(@trip, trip_user), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    <% end %>
</tr>
