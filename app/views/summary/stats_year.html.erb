<%= render 'summary_header' %>
<%= render 'summary', stats: @stats %>

<% if @stats[:waypoints_per_continent].present? %>
  <div class="mt-5">
    <h2 class="display-6 mb-4">Places visited per continent</h2>
    <%= pie_chart @stats[:waypoints_per_continent] %>
  </div>
<% end %>

<% if @stats[:distance_per_month].present? %>
  <div class="mt-5">
    <h2 class="display-6 mb-4">Distance travelled per month</h2>
    <%= column_chart @stats[:distance_per_month], xmin: 1, xmax: 12, discrete: true, round: 2, suffix: ' km' %>
  </div>
<% end %>

<% if @stats[:distance_per_means].present? %>
  <div class="mt-5">
    <h2 class="display-6 mb-4">Distance travelled per means of transport</h2>
    <%= column_chart @stats[:distance_per_means], discrete: true, round: 2, suffix: ' km' %>
  </div>
<% end %>
