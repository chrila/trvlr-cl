<div class="like-button">
  <% if likeable.liked_by? current_user %>
    <%= link_to_if can?(:like, likeable), icon_thumbs_up(likeable, true).html_safe, like_path(likeable), method: :delete, id: element_id("like-link", likeable) %>
  <% else %>
    <%= link_to_if can?(:like, likeable), icon_thumbs_up(likeable, false).html_safe, like_path(likeable), method: :post, id: element_id("like-link", likeable) %>
  <% end %>
  <span id=<%= element_id("like-counter", likeable) %>><%= likeable.likes_count %></span>
</div>
