<h1 class="display-2"><%= "#{@trip.title} - Segments" %></h1>

<%= render 'shared/navbar_trips' %>

<% if can? :manage, @trip %>
  <%= render 'shared/add_button', target: new_trip_segment_path(@trip), resource: 'segment' %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">From</th>
      <th scope="col">To</th>
      <th scope="col">Start</th>
      <th scope="col">End</th>
      <th scope="col">Distance</th>
      <th scope="col">Status</th>
      <% if can? :manage, @trip %>
        <th scope="col">Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render @segments %>
  </tbody>
</table>
