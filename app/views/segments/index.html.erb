<h1 class="display-6">Segments</h1>
<div class="mb-3 text-end">
  <%= link_to 'New segment', new_trip_segment_path(@trip), class: 'btn btn-large btn-dark' %>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">From</th>
      <th scope="col">To</th>
      <th scope="col">Start</th>
      <th scope="col">End</th>
      <th scope="col">Distance</th>
      <th scope="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @segments %>
  </tbody>
</table>

<%= link_to 'Back', :back %>
