<h1 class="display-2"><%= "#{@trip.title} - Overview" %></h1>

<p class="fs-3"><%= @trip.description %></p>
<p><strong>Start date: </strong><%= @trip.start_date %></p>
<p><strong>End date: </strong><%= @trip.end_date %></p>
<p><strong>Budget: </strong><%= @trip.budget %></p>
<p><strong>Status: </strong><%= @trip.status_string %></p>
<p><strong>Visibility: </strong><%= @trip.visibility_string %></p>

<div class="my-3">
  <%= link_to 'Edit', edit_trip_path(@trip), class: 'btn btn-large btn-dark' %>
  <%= link_to 'Delete', @trip, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-large btn-outline-dark' %>
</div>

<div class="my-3">
  <%= link_to 'Waypoints', trip_waypoints_path(@trip), class: 'btn btn-large btn-dark' %>
  <%= link_to 'Segments', trip_segments_path(@trip), class: 'btn btn-large btn-dark' %>
  <%= link_to  'Blog', trip_posts_path(@trip), class: 'btn btn-large btn-dark' %>
  <%= link_to  'Media', trip_media_items_path(@trip), class: 'btn btn-large btn-dark' %>
</div>

<h2 class="display-6 mt-5">Comments</h2>
<div class="row row-cols-1 row-cols-xl-2 g-3 my-3">
  <%= render @trip.comments %>
</div>

<%= link_to 'Back', :back %>
