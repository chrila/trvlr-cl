<div class="col">
  <div class="card trip-card">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to trip.title, trip %>
      </h5>
      <p class="card-text"><%= trip.description %></p>
    </div>
    <div class="card-footer">
      <small class="text-muted">
        <%= participant_list(trip) %>
      </small>
    </div>
  </div>
</div>
