<div class="col">
  <div class="card trip-card">
    <%= link_to trip do %>
    <div class="card-body">
      <h5 class="card-title">
        <%= trip.title %>
      </h5>
      <p class="card-text"><%= trip.description %></p>
      <p class="card-text">
        <span class="badge bg-dark"><%= trip.visibility_string %></span>
        <%= tag.span user_in_trip(current_user, trip).role_string, class: class_names('badge', bg_class_for_role(user_in_trip(current_user, trip))) %>
        <%= tag.span trip.status_string, class: class_names('badge', bg_class_for_status(trip)) %>
      </p>
    </div>
    <% end %>
    <div class="card-footer">
      <div class="btn-group">
        <%= render 'shared/trip_users_button', trip: trip %>
        <%= render 'shared/trip_waypoints_button', trip: trip %>
        <%= render 'shared/trip_segments_button', trip: trip %>
        <%= render 'shared/trip_posts_button', trip: trip %>
        <%= render 'shared/trip_media_items_button', trip: trip %>
      </div>
      <span class="trip-reaction-buttons">
        <% if can? :like, trip %>
          <div class="mx-4">
            <% if Like.liked?(current_user, trip) %>
              <%= link_to trip_dislike_path(trip), method: :delete do %>
                <i class="bi bi-hand-thumbs-up-fill mx-1"></i>  
              <% end %>
            <% else %>
              <%= link_to trip_like_path(trip), method: :post do %>
                <i class="bi bi-hand-thumbs-up mx-1"></i>  
              <% end %>
            <% end %>
            <%= trip.likes_count %>
          </div>
        <% end %>
        <% if can? :new_trip, Comment %>
          <div>
            <%= link_to trip_comments_path(trip) do %>
              <i class="bi bi-chat-right mx-1"></i>
            <% end %>
            <%= trip.comments_count %>
          </div>
        </span>
      <% end %>
    </div>
  </div>
</div>
