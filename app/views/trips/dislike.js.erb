// change icon
id = "<%= element_id('like-button', @trip) %>"
elem = document.getElementById(id);
elem.classList.remove('bi-hand-thumbs-up-fill');
elem.classList.add('bi-hand-thumbs-up');

// refresh likes count
id = "<%= element_id('like-counter', @trip) %>"
document.getElementById(id).innerText = "<%= @trip.likes_count %>";

// update link
id = "<%= element_id('like-link', @trip) %>"
elem = document.getElementById(id);
elem.setAttribute("href", '<%= trip_like_path(@trip) %>');
elem.setAttribute("data-method", "post");
