<%= render 'shared/trips_header', trip: @media_item.trip, title: @media_item.title, navbar: false %>

<%= render 'shared/back_button', target: trip_media_items_path(@media_item.trip) %>
<% if can? :manage, @media_item %>
    <%= render 'shared/edit_button', target: edit_media_item_path(@media_item) %>
    <%= render 'shared/delete_button', target: media_item_path(@media_item) %>
<% end %>

<p class="fs-3 fw-light"><%= @media_item.description %></p>

<%= render @media_item, detail_view: true %>

<h2 class="display-6 mt-5 mb-4">Comments</h2>

<% if can? :new_media_item, Comment %>
  <%= render 'shared/add_button', target: media_item_new_comment_path(@media_item), resource: 'comment' %>
<% end %>

<div class="row row-cols-1 row-cols-xl-2 g-3 my-3">
  <%= render @media_item.comments.order(:id).reverse %>
</div>
