// change icon
id = "like-button-<%= @media_item.id %>"
elem = document.getElementById(id);
elem.classList.remove('bi-hand-thumbs-up-fill');
elem.classList.add('bi-hand-thumbs-up');

// refresh likes count
id = "like-counter-<%= @media_item.id %>";
document.getElementById(id).innerText = "<%= @media_item.likes_count %>";

// update link
id = "like-link-<%= @media_item.id %>";
elem = document.getElementById(id);
elem.setAttribute("href", '<%= media_item_like_path(@media_item) %>');
elem.setAttribute("data-method", "post");