<h1 class="display-2"><%= "#{@waypoint.name} - Blog" %></h1>

<%= link_to :back, class: 'btn btn-large btn-outline-dark mb-4' do %>
  <i class="bi bi-arrow-left"></i>
<% end %>

<% if can? :new_waypoint, Post %>
  <div class="my-3">
    <%= link_to 'New blog post', trip_waypoint_new_post_path, class: 'btn btn-dark btn-large' %>
  </div>
<% end %>

<div class="row row-cols-1 g-4">
  <%= render @posts %>
</div>
