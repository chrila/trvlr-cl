<h1 class="display-2"><%= "#{@waypoint.name} - Blog" %></h1>

<%= render 'shared/back_button', target: :back %>

<% if can? :new_waypoint, Post %>
  <%= render 'shared/add_button', target: trip_waypoint_new_post_path(@trip, @waypoint), resource: 'blog post' %>
<% end %>

<div class="row row-cols-1 g-4">
  <%= render @posts %>
</div>

<% if @pagy.pages > 1%>
  <div class="my-5 text-center">
    <%== pagy_bootstrap_nav @pagy %>
  </div>
<% end %>
