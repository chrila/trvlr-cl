<%= render 'shared/trips_header', trip: @trip, title: 'Blog', active: 'posts' %>

<% if can? :manage_mediaitem, @trip %>
  <%= render 'shared/add_button', target: trip_new_post_path(@trip), resource: 'blog post' %>
<% end %>

<div class="row row-cols-1 g-4">
  <%= render @posts %>
</div>

<% if @pagy.pages > 1%>
  <div class="my-5 text-center">
    <%== pagy_bootstrap_nav @pagy %>
  </div>
<% end %>
