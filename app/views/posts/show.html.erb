<%= link_to :back, class: 'btn btn-large btn-outline-dark mb-4' do %>
  <i class="bi bi-arrow-left"></i>
<% end %>

<h1 class="display-2">Blog post</h1>
<%= render @post %>

<h2 class="display-6 mt-5">Comments</h2>
<div class="row row-cols-1 row-cols-xl-2 g-3 my-3">
  <%= render @post.comments %>
</div>


<%= link_to 'New comment', post_new_comment_path(@post), class: 'btn btn-large btn-dark' %>
