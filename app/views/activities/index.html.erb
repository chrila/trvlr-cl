<h1 class="display-2">Activity stream</h1>

<div class="mt-3 mb-3">
  <h2 class="fw-light fs-3 mb-0">Users you might want to follow:</h2>
  <div class="row row-cols-2 row-cols-sm-2 row-cols-md-4 row-cols-lg-6">
    <%= render User.users_to_follow(current_user).first(6) %>
  </div>
</div>

<div class="row row-cols-1 g-4">
  <%= render @activities %>
</div>

<% if @pagy.pages > 1%>
  <div class="my-5 text-center">
    <%== pagy_bootstrap_nav @pagy %>
  </div>
<% end %>
