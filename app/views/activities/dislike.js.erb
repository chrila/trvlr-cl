// change icon
id = "<%= element_id('like-button', @activity) %>"
elem = document.getElementById(id);
elem.classList.remove('bi-hand-thumbs-up-fill');
elem.classList.add('bi-hand-thumbs-up');

// refresh likes count
id = "<%= element_id('like-counter', @activity) %>"
document.getElementById(id).innerText = "<%= @activity.likes_count %>";

// update link
id = "<%= element_id('like-link', @activity) %>"
elem = document.getElementById(id);
elem.setAttribute("href", '<%= activity_like_path(@activity) %>');
elem.setAttribute("data-method", "post");
