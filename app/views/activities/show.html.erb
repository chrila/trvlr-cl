<h1 class="display-2">Activity detail</h1>

<%= render 'shared/back_button', target: activities_path %>

<%= render @activity %>

<h2 id="comments" class="display-6 mt-5 mb-4">Comments</h2>

<% if can? :new_activity, Comment %>
  <%= render 'shared/add_button', target: activity_new_comment_path(@activity), resource: 'comment' %>
<% end %>

<div class="row row-cols-1 row-cols-xl-2 g-3 my-3">
  <%= render @activity.comments.order(:id).reverse %>
</div>
